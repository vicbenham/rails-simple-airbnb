<div class="container-md mt-3" style="max-width: 600px;">
  <h1 class="mb-4 text-center">Create flat</h1>

  <div class="card shadow-sm p-4 mb-5">
    <%= simple_form_for @flat, html: { class: 'needs-validation' } do |f| %>
      <div class="mb-3">
        <%= f.input :name, input_html: { class: 'form-control' } %>
      </div>
      <div class="mb-3">
        <%= f.input :address, input_html: { class: 'form-control' } %>
      </div>
      <div class="mb-3">
        <%= f.input :description, as: :text, input_html: { class: 'form-control', rows: 3 } %>
      </div>
      <div class="mb-3">
        <%= f.input :price_per_night, input_html: { class: 'form-control' } %>
      </div>
      <div class="mb-3">
        <%= f.input :number_of_guests, input_html: { class: 'form-control' } %>
      </div>
      <div class="d-grid gap-2">
        <%= f.submit 'Create Flat', class: 'btn btn-dark' %>
      </div>
    <% end %>
  </div>
</div>
